{
    "name": "Hugo Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh"
            }
        },
            "extensions": [
                "ms-azuretools.vscode-docker",
                "vscode.git",
                "golang.go"
            ]
    },
    "mounts": [
        "source=./site,target=/site"
    ],
    "postCreateCommand": "hugo server --bind 0.0.0.0 --disableFastRender"
}